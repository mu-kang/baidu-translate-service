{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es6",
    "preserveConstEnums": true,
    "sourceMap": false,
    "declaration": true,
    "allowUmdGlobalAccess": false,
    "outDir": "lib",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [ "es6", "dom"],
    "moduleResolution":"Node"
  },
  "include": ["src/**/*"]
}

